# http://editorconfig.org
root = true

[*]
# 字符集 utf-8
charset = utf-8
# 缩进风格：空格
indent_style = space
# 缩进空格数：2
indent_size = 2
# 换行符 lf
# end_of_line = lf 考虑到操作系统差异，暂时去除此项配置，参见 https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties - end_of_line
# 是否删除行尾的空格
trim_trailing_whitespace = true
# 是否在文件的最后插入一个空行
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
